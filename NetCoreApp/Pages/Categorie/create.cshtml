@page
@model NetCoreApp.Pages.Categorie.createModel
@{
    ViewData["Title"] = _localizer["Catégorie"];
    ViewBag.Current = EnumMenu.Categorie;
}
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

<h2>@_localizer["Catégorie - Mise à jour"]</h2>
<div class=".mt-2">
    <form method="post">
        @{
            if (!string.IsNullOrEmpty(Model.Message) )
            {
                <div class="alert alert-danger" role="alert">
                    @Model.Message
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        }
        
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group @(Model.Id==0?"d-none":"")">
            <label> Id: @Model.Id</label>
        </div>

        <div class="form-group">
            <label asp-for="Categorie.Libelle"></label>
            <input asp-for="Categorie.Libelle" class="form-control" />
            <span asp-validation-for="Categorie.Libelle" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <button type="reset" class="btn btn-danger">Annuler</button>
    </form>
</div>