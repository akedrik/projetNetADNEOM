@page
@using NetCoreApp.Core.Classes.Enum
@model NetCoreApp.Pages.Categorie.indexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Catégories";
    ViewBag.Current = EnumMenu.Categorie;
}

@section css{
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
}

@section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });

    </script>
}

<h2>Listes des catégories</h2>
<div class=".mt-2">
     <a  asp-page="/Categorie/Create"> <button class="btn btn-primary float-right">Ajouter</button></a>
    <form id="frm" method="post">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Libelle</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (NetCoreApp.Core.Entities.Categorie categorie in Model.Categories)
                {
                    <tr>
                        <td>@categorie.Id</td>
                        <td>@categorie.Libelle</td>
                        <td>
                            <a asp-page="/Categorie/Create" asp-route-id="@categorie.Id">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <button type="submit"
                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet élement ?')"
                                    asp-page-handler="delete"
                                    asp-route-id="@categorie.Id">
                                <i class="fa fa-trash-o"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>