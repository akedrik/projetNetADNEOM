@page
@model NetCoreApp.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = _localizer["Inscription"];
}

<div class="container">

    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-8">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="_User.Email"></label>
                    <input asp-for="_User.Email" class="form-control" />
                    <span asp-validation-for="_User.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="_User.Password"></label>
                    <input asp-for="_User.Password" class="form-control" />
                    <span asp-validation-for="_User.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="_User.ConfirmPassword"></label>
                    <input asp-for="_User.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="_User.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">@_localizer["S'incrire"]</button>
            </form>
        </div>
    </div>

</div>
